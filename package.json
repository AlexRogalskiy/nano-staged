{
  "name": "nano-staged",
  "version": "0.1.0",
  "description": "A tiny pipeliner on git staged files.",
  "author": "Usman Yunusov <usman.iunusov@gmail.com>",
  "license": "MIT",
  "repository": "usmanyunusov/nano-staged",
  "type": "module",
  "bin": "./bin/index.js",
  "exports": "./run/index.js",
  "scripts": {
    "lint": "prettier --write **/*.js",
    "unit": "node_modules/uvu/bin.js . '\\.test\\.js$'",
    "test": "c8 yarn unit",
    "bench": "node benchmarks/running-time/index.js"
  },
  "dependencies": {
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "clean-publish": "^3.4.3",
    "nanoid": "^3.1.30",
    "prettier": "^2.4.1",
    "sinon": "^12.0.1",
    "uvu": "^0.5.2"
  },
  "clean-publish": {
    "cleanDocs": true
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true
  },
  "keywords": [
    "runner",
    "lint",
    "git",
    "staged",
    "eslint",
    "prettier",
    "stylelint"
  ]
}
