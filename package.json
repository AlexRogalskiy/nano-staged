{
  "name": "nano-staged",
  "version": "0.1.0",
  "description": "Pipeliner for git staged files",
  "keywords": [
    "runner",
    "lint",
    "git",
    "staged",
    "eslint",
    "prettier",
    "stylelint"
  ],
  "author": "Usman Yunusov",
  "license": "ISC",
  "repository": "https://github.com/usmanyunusov/nano-staged",
  "type": "module",
  "main": "./bin/index.js",
  "bin": "./bin/index.js",
  "scripts": {
    "lint": "prettier --write **/*.js",
    "unit": "node_modules/uvu/bin.js . '\\.test\\.js$'",
    "test": "c8 yarn unit"
  },
  "dependencies": {
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "clean-publish": "^3.4.2",
    "fs-extra": "^10.0.0",
    "nanoid": "^3.1.30",
    "prettier": "^2.4.1",
    "uvu": "^0.5.2"
  },
  "clean-publish": {
    "cleanDocs": true
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true
  }
}
